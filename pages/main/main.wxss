/* pages/renter/renter.wxss */
@import '../../public/public.wxss';

.owner-vertical {
  height: 50px;
  font-size: 13px;
  width: 96%;
  margin:0 auto ;
 margin-bottom: -10px;
}
.owner-vertical span {
  float: left;
  height:30px;
  line-height:30px;
}
.owner-vertical span:nth-child(1){
    background-color: #4575d4;
    width: 15%;
    text-align: center;
    font-weight:600;
    color:#ffffff;
}
.owner-panel {
  background: transparent;
  color:#333;
}

.login {
  width: 280px;
  height:40px;
  line-height: 40px;
  background:#fe3636;
  color:#fff;
  margin: 0 auto;
  border-radius:0;
  margin-top:25px;
  font-size: 13px;
}
.owner-vertical span:nth-child(2){
      background: #333;
    color: #f9f9f9;
    border-color: #3498db;
    width: 85%;
    overflow: hidden;
    padding-left: 5px;
    font-size: 13px;
    box-sizing: border-box;
}

.changeCharactor {
  font-size:13px;
  text-align: center;
}
.changeCharactor > view {
  display: flex ;
  justify-content: center ;
  align-items: center ;
  height:130px;
  width: 80%;
   border:1px solid #ccc;
  border-radius:5px;
  margin:0 auto;
  margin-top: 20px;
}
.changeCharactor > view:nth-child(1){
  margin-top: 100px;
}
.changeCharactor image {
  width: 50px;
  height:50px;
  margin:0 auto;
  display: block;

}
.changeCharactor-item {
  width:80px;
  height: 80px;
   border:1px solid #ccc;
   border-radius:100px;
   display: flex ;
   align-items: center ;
   margin-bottom: 5px;
}